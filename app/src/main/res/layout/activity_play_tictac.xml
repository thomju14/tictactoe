<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientlist"
    android:id="@+id/backlayout"
    tools:context=".PlayTictac">


    <TextView
        android:id="@+id/textView_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Who is the winner?"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_winner"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="0"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="0" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="1"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="1" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="2"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="3"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="3" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="4"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="4" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="5"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="6"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="6" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="7"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="7" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="#7BCDF6"
                android:tag="8"
                android:textColor="@color/black"
                android:textSize="60sp"
                android:textStyle="bold"
                tools:text="8" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="203dp"
        android:layout_height="51dp"
        android:layout_marginBottom="112dp"
        android:text="Restart the Game"
        android:onClick="restartGame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>